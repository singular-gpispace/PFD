proc pfd_split_terms(int id,
                     string in_filename,
                     string out_filename,
                     string tmpdir,
                     int split_max)
{
  list terms_read = read("ssi:r " + tmpdir + "/" + in_filename + "_" + string(id) + ".ssi");
  list terms = terms_read[1];
  list dec = terms_read[2];

  int term_count = size(terms);
  int dec_count = size(dec);

  int split_count = min(split_max, term_count);

  if (split_count == 0) {
    ERROR("split_count should never be 0");
  }
  int i;

  list term_lists = list();
  list dec_lists = list();
  for(i = 1; i <= split_count; i++) {
    term_lists[i] = list();
    dec_lists[i] = list();
  }

  for(i = 0; i < term_count; i++) {
    term_lists[1 + i % split_count][1 + i div split_count] = terms[1 + i];
  }
  for(i = 0; i < dec_count; i++) {
    dec_lists[1 + i % split_count][1 + i div split_count] = dec[1 + i];
  }

  for(i = 1; i <= split_count; i++) {
    write("ssi:w " + tmpdir + "/" + out_filename + "_" +
              string(id) + "_" + string(i) + ".ssi",
          list(term_lists[i], dec_lists[i]));
  }

  return (split_count);
}

proc pfd_fork_compute_term( int id
                          , int term_id
                          , string step
                          , string in_filename
                          , string out_filename
                          , string tmpdir
                          , list #
                          )
{

  system("--ticks-per-sec",1000);
  short = 0;

  int debug=0;
  link l=":w ";

  list terms_read = read("ssi:r " + tmpdir + "/" + in_filename + "_" +
          string(id) + "_" + string(term_id) + ".ssi");
  list terms = terms_read[1];
  list dec = terms_read[2];
  list input = read("ssi:r " + tmpdir + "/input_" + string(id) + ".ssi");
  ideal q = input[1];

  if (size(terms) < 1) {
    ERROR("Expected at least one term, got " + string(size(terms)) +
          " instead.  Check for error in term split process.");
  }

  list result = generic_dec_onestep(step, get_loop_strat(step), terms, dec, q, debug, l);

  write("ssi:w " + tmpdir +
                   "/" + out_filename + "_" +
                   string(id) + "_" + string(term_id) +
                   ".ssi", list(result[1], result[2]) );
}


proc pfd_fork_merge( int id
                   , int term_count
                   , string step
                   , string filename
                   , string tmpdir
                   )
{
  int i;
  list dec = read("ssi:r " + tmpdir +
                             "/" + filename + "_dec_" +
                             string(id) +
                             ".ssi");

  for (i = 1; i <= term_count; i++) {
    list result = read("ssi:r " + tmpdir +
                                "/" + filename + "_result_" +
                                string(id) + "_" + string(i) +
                                ".ssi");

    dec = mergepfd(dec, result);
  }

  write( "ssi:w " + tmpdir +
                    "/" + filename + "_dec_" +
                    string(id) +
                    ".ssi"
       , dec);
}

proc pfd_fork_merge_pair( int id
                        , int left
                        , int right
                        , string filename
                        , string tmpdir
                   )
{
  list leftl = read("ssi:r " + tmpdir +
                              "/" + filename + "_result_" +
                              string(id) + "_" + string(left) +
                              ".ssi");
  list rightl = read("ssi:r " + tmpdir +
                              "/" + filename + "_result_" +
                              string(id) + "_" + string(right) +
                              ".ssi");

  list terms = mergepfd(leftl[1], rightl[1]);
  list dec = mergepfd(leftl[2], rightl[2]);

  write( "ssi:w " + tmpdir +
                    "/" + filename + "_result_" +
                    string(id) + "_" + string(left) +
                    ".ssi"
       , list(terms, dec));
}

